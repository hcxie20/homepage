<%- include("../partials/header") %> 


<div class="container">
    <header class="jumbotron">
        <div class="contain text-center">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-piccked campgrounds</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center justify-content-center">
        <% campgrounds.forEach(function(campground){%>
            <div class = "col-md-3 col-sm-6 m-2 p-0 border border-gray align-items-center justify-content-center">
                <figure class="figure p-1 m-0">
                    <img class="img-fluid w-100" src="<%= campground.image %> ">
                    <figcaption class="figure-caption"><%= campground.name %></figcaption>
                    <p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">More</a>
                    </p>
                </figure>
            </div>
        <% }) %> 
    </div>
        
</div>


<%- include("../partials/footer") %> 