<%- include("../partials/header") %> 
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <figure class="figure border p-2">
                <img src="<%= campground.image %>" alt="" class="img-fluid w-100">
                <div class="container p-1">
                    <h4 class="float-left"><%= campground.name %></h4><br>
                    <h4 class="float-right">9/night</h4><br>
                    <div class="float-none mt-3">
                    <p><%= campground.description %></p>
                </div>
                </div>
            </figure>

            <div class="bg-light p-4">
                <div class="text-right">
                    <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-dark">Add a New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %> 
                    <div class="row">
                        <div class="col-md-12">
                            <%=comment.author%>
                            <span class="float-right">10 days ago</span><br>
                            <p><%=comment.text%></p>
                        </div>
                    </div>
                <% }) %> 
                </div>
            </div>
        </div>
    </div>
</div>



<%- include("../partials/footer") %> 